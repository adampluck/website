    <dt class="col-sm-3"><%=date = Date.parse(writing['Date']); date.strftime('%b %Y')%>, <%=URI(writing['URL']).host.gsub('www.','')%></dt>
    <dd class="col-sm-9"><a href="<%=writing['URL']%>"><%=writing['Name']%></a></dd>
  <% } %>
</div>

