<%= ul_nav (
      (@virtual_tags.map { |slug| [tag_badge(slug, html_tag: 'span'), "/coins/tag/#{slug}"] }) +
      (tags = Tag.where(:id.in => Coin.pluck(:tag_id)).sort_by { |tag| -tag.holding }).map { |tag| [tag_badge(tag, html_tag: 'span'), "/coins/tag/#{tag.name}"] } +
      [[tag_badge('overview', html_tag: 'span'), '/tags']]
    ),
    ul_class: 'nav nav-tabs',
    li_class: 'nav-item',
    li_active_class: nil,
    a_class: 'nav-link',
    a_active_class: 'active',
    ul_id: 'coins-ul',
    generate_subnav_href_and_ul: false
%>

<% unless current_account %>
  <%= md :seeds %>
<% end %>
