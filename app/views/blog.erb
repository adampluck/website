
<div class="row justify-content-center">
  <div class="col-sm-8">
    <% @blog_posts.each { |blog_post| %>
      <div class="card mb-4 shadow-sm">          
        <div class="card-body">
          <a class="d-block text-dark" href="/blog/<%=blog_post['Slug']%>" style="text-decoration: none">
            <p class="text-muted"><%=Date.parse(blog_post['Published at']).to_s(:blog)%></p>          
            
            <% if blog_post['Header image URL'] %>
              <div class="mb-3" style="height: 250px; background-image: url(<%=blog_post['Header image URL']%>); background-size: cover; background-position: center"></div>
            <% end %>
              
            <h1><%=blog_post['Title']%></h1>
            <p class="lead text-muted mb-0"><%=blog_post['Summary']%></p>
            
          </a>
        </div>
      </div>
    <% } %>
  </div>
</div>