<div class="row">
  <% ['wild',
      'regeneration',
      'technology',
      'metamodern',
      'conscious sexuality',
      'economics',
      'leadership',
      'meditation',
      'philosophy',
      'pop',
      'psychedelics',
      'science'].each { |c| %>
    <% Podcast.all(filter: "{Category} = '#{c}'").shuffle.each { |podcast| %>
    <div class="col-sm-3 mb-3">
      <%= partial :podcast, locals: { podcast: podcast } %>
    </div>
    <% } %>
  <% } %>
</div>
