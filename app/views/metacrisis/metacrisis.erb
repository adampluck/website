<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-dark">
    <li class="breadcrumb-item active" aria-current="page">Daniel Schmachtenberger on the Metacrisis</li>
  </ol>
</nav>

<%= partial :'metacrisis/network', locals: {vterms: Vterm.all, vedges: Vedge.all} %>

<ol class="mt-3">
  <% x = 10 %>
  <% Vterm.all.order('weight desc').each { |vterm| %>
  <li>
    <a href="/metacrisis/terms/<%= vterm.term %>" class="text-contrast" style="font-size: <%= em = 1 + vterm.weight.to_f / x; em > 2 ? 2 : em %>em"><%= vterm.term %></a>
    <label class="badge badge-primary"><%=vterm.weight%></label>
  </li>
  <% } %>
</ol>
