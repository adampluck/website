<% Video.all.each { |video| %>
<% terms = video.term(params[:term]) %>
<% if terms.count > 0 %>
  <h1>
    <a class="text-white" href="https://youtu.be/<%=video.youtube_id%>">
      <%=video.title %>
    </a>
  </h1>
  <ul>
    <% terms.each { |time, line| %>
    <li><a href="https://www.youtube.com/watch?v=<%=video.youtube_id%>&t=<%=time%>s"><%=line%></a></li>
    <% } %>
  </ul>
<% end %>
<% } %>
