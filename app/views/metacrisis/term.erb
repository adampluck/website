<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-dark">
    <li class="breadcrumb-item"><a href="/metacrisis/terms">Metacrisis</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%=params[:term]%></li>
  </ol>
</nav>

<% Video.all.each { |video| %>
<% terms = video.term(params[:term]) %>
<% if terms.count > 0 %>
  <h1>
    <a target="_blank" class="text-white" href="https://youtu.be/<%=video.youtube_id%>">
      <%=video.title %>
    </a>
  </h1>
  <ul>
    <% terms.each { |time, line| %>
    <li><a target="_blank" href="https://www.youtube.com/watch?v=<%=video.youtube_id%>&t=<%=time%>s"><%=line%></a></li>
    <% } %>
  </ul>
<% end %>
<% } %>
