<div class="card bg-dark shadow-sm">
  <a href="https://open.spotify.com/show/<%= podcast['Spotify ID'] %>">
    <img onerror="this.style.display='none'" class="card-img-top" src="<%= podcast['Image URL'] %>">
  </a>
  <div class="card-body">
    <h5 class="card-title mb-0">
      <a href="https://open.spotify.com/show/<%= podcast['Spotify ID'] %>" class="text-white">
        <%= podcast['Name'] %>
      </a>
      <% if podcast['Creator'] != podcast['Name'] && podcast['Creator'].length > 1 %>
      <br>
      <small class="text-muted"><%= podcast['Creator'] %></small>
      <% end %>
    </h5>
  </div>
</div>
