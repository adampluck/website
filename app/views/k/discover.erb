<div class="row">
  <div class="col">
    <ol>
      <% x = 20 %>
      <% @word_frequency.sort_by { |w,f| -f }.first(100).each { |w,f| %>
      <li>
        <a href="/k/<%=@network.slug%>/terms/create/<%= w %>" class="text-contrast" title="<%= f %>" style="font-size: <%= em = f.to_f / x; em > 2 ? 2 : em %>em">  <%= w %>   </a>
        <label class="d-none badge badge-primary"><%=f%></label>
      </li>
      <% } %>
    </ol>
  </div>
  <div class="col">
    <ol>
      <% x = 10 %>
      <% @phrase2_frequency.sort_by { |w,f| -f }.first(100).each { |w,f| %>
      <li>
        <a href="javascript:;" onclick="
        $.get('/k/<%=@network.slug%>/terms/create/<%= w %>', function() {
          $(this).parent().remove();
        });
        "
        class="text-contrast" title="<%= f %>" style="font-size: <%= em = f.to_f / x; em > 2 ? 2 : em %>em">  <%= w %>   </a>
        <label class="d-none badge badge-primary"><%=f%></label>
      </li>
      <% } %>
    </ol>
  </div>
</div>
