<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-dark">
    <li class="breadcrumb-item active" aria-current="page">
      <% form_tag '/k', method: :get do %>
        <%= select_tag :slug, onchange: '$(this.form).submit()', options: Network.all.map { |network| [network.name, network.slug] }, selected: @network.slug, class: 'form-control bg-dark border-0' %>
      <% end %>
    </li>
  </ol>
</nav>

<%= partial :'k/explain' %>

<%= partial :'k/network', locals: {vterms: @network.vterms, vedges: @network.vedges} %>

<ol class="mt-3">
  <% x = 10 %>
  <% @network.vterms.order('weight desc').each { |vterm| %>
  <li>
    <a href="/k/<%=@network.slug%>/terms/<%= vterm.term %>" class="text-contrast" style="font-size: <%= em = 1 + vterm.weight.to_f / x; em > 2 ? 2 : em %>em"><%= vterm.term %></a>
    <label class="badge badge-primary"><%=vterm.weight%></label>
  </li>
  <% } %>
</ol>
