<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-8">

    <div class="row justify-content-center mb-5">
      <div class="col">
        <% form_tag '/ai', class: 'mb-2' do %>
          <%= text_field_tag :title, placeholder: 'Title of the post you want me to write?', class: 'text-center form-control mb-2', required: true, onclick: "$('#extra-fields').show()" %>
          <div id="extra-fields" style="display: none">
            <%= text_field_tag :email, placeholder: 'Your email address (used for confirmation only, not stored)', class: 'text-center form-control mb-2', required: true %>
            <%= submit_tag 'Create post', class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
        <p class="text-muted text-center" style="font-size: 0.85em">All posts have been generated by visitors to the site.
          <% unless request.path == '/ai' %>
            <a href="/ai">View index</a>
          <% end %>
        </p>
      </div>
    </div>

  </div>
</div>
