<a target="_blank" href="<%= writing['URL'] %>" class="bgo-container organisation" style="position: relative; display: block; height: 180px; background-position: center; background-size: cover; background-image: url('<%= writing['Image'].first['url'] %>')">
  <div class="bgo" style="background: black; opacity: 0.4; height: 100%"></div>
  <div style="position: absolute; bottom: 0;" class="p-2">
    <h3 style="color: white;" class="mb-0">
      <%= writing['Name'] %>
      <br>
      <small><%= URI(writing['URL']).host.gsub('www.', '') %></small>
    </h3>
  </div>
</a>
