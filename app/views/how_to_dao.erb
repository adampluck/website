<%

session = GoogleDrive::Session.from_config(OpenStruct.new(
                                             client_id: ENV['GOOGLE_DRIVE_CLIENT_ID'],
                                             client_secret: ENV['GOOGLE_DRIVE_CLIENT_SECRET'],
                                             refresh_token: ENV['GOOGLE_DRIVE_REFRESH_TOKEN'],
                                             scope: ENV['GOOGLE_DRIVE_SCOPE'].split(',')
                                           ))

                                           %>


<% h = session.file_by_id('1jxbb3YkrjAT1TUe6W2yCFUAsXUhdVt5JYoJwmMfykoQ').export_as_string('text/html') %>


<div class="row">
  <div class="col-sm-2">
    <div class="d-none d-sm-block" id="toc"></div>
  </div>
  <div class="col-sm-8">
    <div class="blog_post">
      <%= n = Nokogiri::HTML(h)
      n.search('h1,h2,h3,h4,h5,h6').remove_attribute('id')
      n.search('body').inner_html.to_s %>
    </div>
  </div>
</div>
