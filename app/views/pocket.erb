
<% hosts = {} %>
<% client = Pocket.client(:access_token => ENV['POCKET_ACCESS_TOKEN']) %>
<% items = client.retrieve(:detailType => :complete)['list']; items.each  { |id, item|
  domain = URI(item['resolved_url']).host.gsub('www.','')
  hosts[domain] = [] if !hosts[domain]
  hosts[domain] << item
  } %>

<h1 class="text-center"><%= pluralize items.count, 'unread item' %></h1>

<% hosts.sort_by { |domain, items| -items.count }.each { |domain, items| %>
  <h3><%=domain%> <span class="badge badge-primary"><%=items.count%></span></h3>
  <ul class="list-unstyled">
    <% items.sort_by { |item| item['resolved_title'].parameterize }.each { |item| %>
      <li>
        <h4>
          <a href="<%= item['resolved_url'] %>"><%= !item['resolved_title'].blank? ? item['resolved_title'] : item['resolved_url']  %></a>
        </h4>
      </li>
    <% } %>
  </ul>
<% } %>